{
  "printWidth": 80,
  "tabWidth": 4,
  "useTabs": false,
  "semi": true,
  "singleQuote": false,
  "trailingComma": "es5",
  "bracketSameLine": false,
  "endOfLine": "crlf",

  "overrides": [
    {
      "files": "*.css",
      "options": {
        "singleDeclarationBlock": true,
        "newlineBetweenRules": true,
        "blankLineBeforeLayer": true
      }
    }
  ]
}
